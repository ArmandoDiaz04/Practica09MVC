@model IEnumerable<PracticaMVC.Models.marcas>

<h1>@ViewData["Title"] </h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estados)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_marca)
            </td>
            <td> 
                @Html.DisplayFor(modelItem => item.estados)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_marcas" class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_marcas" class="btn btn-outline-success">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_marcas" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
