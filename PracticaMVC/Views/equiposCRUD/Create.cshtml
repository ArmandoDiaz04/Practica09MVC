@{
}

<div class="row">
    <h1>Formularios Razor</h1>
    <div class="row">
        <div class="mb-3 row">
            <label for="txtUserName" class="col-sm-2 col-form-label">Nombre de Usuario</label>
            <div class="col-sm-10">
                @Html.TextBox("txtUserName","",new {@class="form-control"})
            </div>
        </div>
        <div class="mb-3 row">
            <label for="txtPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                @Html.Password("txtPassword","",new {@class="form-control"})
            </div>
        </div>
        <div class="mb-3 row">
            @Html.Label("txtDireccion", "Direccion",new {@class="col-sm-2 col-form-label"})
            <div class="col-sm-10">
                @Html.TextArea("txtDireccion","", new {@class="form-control"})
            </div>
        </div>
        <div class="mb-3 row">
            @Html.Label("chkPasatiempos","Pasatiempos",new {@class="col-sm-2 col-form-label"})
            <div class="col-sm-10">
                @Html.CheckBox("Bailar") Bailar
                @Html.CheckBox("Caminar") Caminar
                @Html.CheckBox("Nadar", true) Nadar
            </div>
        </div>
    </div>
</div>
